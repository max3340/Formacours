
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">

      <div class="new-formation-card p-4">
        <%= simple_form_for([@formation]) do |f| %>
        <%= f.input :name, as: :string, label: "Nom de la Formation", input_html: { autocomplete: 'off' }, placeholder: "Nom de la formation" %>
        <%= f.input :start_date, as: :datetime, label: "Début de la Formation" %>
        <%= f.input :end_date, as: :datetime, label: "Fin de la Formation" %>
        <%= f.submit "Crée ta formation", class: "btn" %>
        <% end %>
      </div>

    </div>
  </div>
</div>

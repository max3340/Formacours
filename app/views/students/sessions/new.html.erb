<%= render 'shared/navbar-signed-in' %>
<div class="form-connexion">
  <div class="connexion">
<h2 style="text-align: center; font-family: 'Hind', sans-serif;">Se connecter</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label: "e-mail",
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                label: "Mot de passe",
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Se connecter", class:"btn-primary mb-3" %>
  </div>
<% end %>

<%= render "students/shared/links" %>
</div>
</div>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" id="navbar2">
  <% if teacher_signed_in? %>
  <%= link_to dashboard_path, class: "navbar-brand" do %>
  <h3 class="nom-compagny2">Formacours</h3>
  <% end %>
  <% elsif student_signed_in? %>
  <%= link_to dashboard_student_path, class: "navbar-brand" do %>
  <h3 class="nom-compagny2">Formacours</h3>
  <% end %>
  <% else %>
  <%= link_to root_path, class: "navbar-brand" do %>
  <h3 class="nom-compagny2">Formacours</h3>
  <% end %>
  <% end %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if teacher_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Créer une formation", new_formation_path, class: "nav-link", id: "link-navbar" %>
      </li>
      <li class="nav-item active">
        <%= link_to "Toutes les formations", formations_path, class: "nav-link", id: "link-navbar" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag current_teacher.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Modifier mon profil", "#", class: "dropdown-item" %>
          <%= link_to "Tableau de bord", dashboard_path, class: "dropdown-item" %>
          <%= link_to "Se déconnecter", destroy_teacher_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% elsif student_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Ma formation", dashboard_student_path, class: "nav-link", id: "link-navbar" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag current_student.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Modifier mon profil", "#", class: "dropdown-item" %>
          <%= link_to "Se déconnecter", destroy_teacher_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Connexion étudiant", new_student_session_path, class: "btn", id: "btn-navbar2" %>
      </li>
      <li class="nav-item">
        <%= link_to "Connexion formateur", new_teacher_session_path, class: "btn", id: "btn-navbar2" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>


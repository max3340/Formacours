      <p style="text-align: center;"><%= image_tag formation.teacher.avatar, witdh: 60, height: 60, class: "rounded-circle" %></p>
      <p style="text-align: center;"><%= link_to "Voir détails de la formation", formation_path(formation), class:"btn btn-outline-primary" %></p>
